<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
        x:Class="PythagoreanTheormCalcAvalonia.MainWindow"
        Title="PythagoreanTheormCalcAvalonia"
        Height="400" Width="250"
        CanResize="False">
  <StackPanel Margin="5" HorizontalAlignment="Center">
    <StackPanel VerticalAlignment="Top">
      <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="Side A" VerticalAlignment="Center" Width="45"/>
        <TextBox Watermark="Side A" Text="{Binding SideA}" Width="100"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="Side B" VerticalAlignment="Center" Width="45"/>
        <TextBox Watermark="Side B" Text="{Binding SideB}" Width="100"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="Side C" VerticalAlignment="Center" Width="45"/>
        <TextBox Watermark="Side C" Text="{Binding SideC}" Width="100"/>
      </StackPanel>
      <Button Command="{Binding OnSubmit}" Width="145" Content="Submit"/>
    </StackPanel>
  </StackPanel>
</Window>
